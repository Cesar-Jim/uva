<!DOCTYPE html>
<html>
  <head>
    <% include ../static/partials/head.ejs %>
  </head>
  <body>
    <% include ../static/partials/navbar.ejs %>

    <main class="container">
      <% include ../static/partials/messages.ejs %>

      <h1 class="form-group signInTitle" id="sign-in-title">Welcome!</h1>

      <form action="/users/sign_in" method="post" class="formSignIn">
        <div class="form-group row col-6">
          <label for="email">Email</label>
          <input
            type="email"
            class="form-control"
            name="email"
            aria-describedby="emailHelp"
            placeholder="Enter email"
          />
        </div>

        <div class="form-group row col-6">
          <label for="password">Password</label>
          <input
            type="password"
            class="form-control"
            name="password"
            aria-describedby="passwordHelp"
            placeholder="Enter password"
          />
        </div>

        <button type="submit" class="btn btn-primary signInBtn">Sign in</button>
      </form>

      <% include ../static/partials/footer.ejs %>
    </main>

    <% include ../static/partials/baseScripts.ejs %>
  </body>
</html>
