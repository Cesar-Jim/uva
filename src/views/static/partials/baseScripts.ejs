<!-- calculation scripts -->
<script>
  function avgRatingUpdate() {
    var poq = parseFloat(document.getElementById("poqValue").value) || 0;
    var body = parseFloat(document.getElementById("bodyValue").value) || 0;
    var taste = parseFloat(document.getElementById("tasteValue").value) || 0;
    var looks = parseFloat(document.getElementById("looksValue").value) || 0;

    // Clear avgRating input field
    document.getElementById("avgRatingValue").value = "";

    var rating = (poq + body + taste + looks) / 4;

    // Re-populate avgRating input field
    document.getElementById("avgRatingValue").value = parseFloat(
      rating
    ).toFixed(1);
  }
</script>
